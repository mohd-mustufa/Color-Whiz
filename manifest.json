{
	"name": "Color Whiz",
	"description": "Effortlessly capture and copy colors from any screen for your creative projects.",
	"version": "1.0.1",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "/popup/popup.html"
	},
	"permissions": ["scripting", "notifications"],
	"host_permissions": ["http://*/*", "https://*/*"],
	"commands": {
		"open_extension": {
			"suggested_key": {
				"default": "Ctrl+Shift+E",
				"mac": "Command+Shift+E"
			},
			"description": "Open the extension"
		}
	},
	"icons": {
		"16": "/images/img_16.png",
		"32": "/images/img_32.png",
		"48": "/images/img_48.png",
		"128": "/images/img_128.png",
		"256": "/images/img_256.png",
		"512": "/images/img_512.png"
	},
	"options_page": "options/options.html"
}
